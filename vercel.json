{
    "version": 2,
    "builds": [
        {
            "src": "api/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/*",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/portfolio",
            "destination": "/public/portfolio.html"
        },
        {
            "source": "/",
            "destination": "/public/index.html"
        }
    ]
}